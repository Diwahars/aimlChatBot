<aiml version="1.0.1" encoding="UTF-8">
<!-- basic_chat.aiml -->
	<category>
		<pattern>HELLO</pattern>
		<template>
			Well, hello!
		</template>
	</category>

	<category>
		<pattern>WHAT ARE YOU</pattern>
		<!-- <random> tag allows you add a list of random responses -->
		<template>
			<random>
				<li>I'm a bot, silly!</li>
				<li>Yo man, I am a bot.</li>
				<li>I'm a chat bot.</li>
			</random>
		</template>
	</category>
</aiml>
